# Lunatria Server Environment Configuration
# Copy this file to .env and update with your actual values

# =================================
# Database Configuration
# =================================
MONGO_PORT=27018
MONGO_HOST=localhost
MONGO_DB=nest

REDIS_PORT=6380
REDIS_HOST=localhost
REDIS_URL=redis://127.0.0.1:6380

# =================================
# Security Configuration
# =================================
# Generate a 32-character secret for session encryption
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PASSPORT_SECRET=your-32-character-session-secret-key

# Generate a 32-character key for credential encryption
# Example: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
CREDENTIAL_ENCRYPTION_KEY=your-32-character-encryption-key

# =================================
# Domain Configuration
# =================================
# Domain for cross-subdomain cookies (include the dot for wildcard)
DOMAIN=.lunatria.com

# =================================
# Service URLs (Internal/Docker Network)
# =================================
# Jellyfin service URL
JELLYFIN_BASE_URL=http://192.168.33.36:8096

# Radarr service URL
RADARR_BASE_URL=http://192.168.33.36:7878

# Sonarr service URL  
SONARR_BASE_URL=http://192.168.33.36:8989

# =================================
# Optional: Additional Services
# =================================
# Add URLs for additional services as needed
# HOARDER_BASE_URL=http://your-hoarder-server:3000
# NEXTCLOUD_BASE_URL=http://your-nextcloud-server:80
# VAULTWARDEN_BASE_URL=http://your-vaultwarden-server:80
# KOMGA_BASE_URL=http://your-komga-server:25600

# =================================
# Development Settings
# =================================
NODE_ENV=development
PORT=3000

# =================================
# Production Settings (uncomment for production)
# =================================
# NODE_ENV=production
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# =================================
# Email Configuration (if using email features)
# =================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@lunatria.com
